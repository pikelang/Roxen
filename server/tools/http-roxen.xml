<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">

<service_bundle type='manifest' name='ROXENhttp:roxen'>

<service
        name='network/http'
        type='service'
        version='1'>

    <instance name='roxen' enabled='false'>
                <dependency name='network'
                    grouping='require_all'
                    restart_on='error'
                    type='service'>
                    <service_fmri value='svc:/milestone/network:default'/>
                </dependency>
                <dependency name='filesystem-local'
                    grouping='require_all'
                    restart_on='none'
                    type='service'>
                    <service_fmri
                        value='svc:/system/filesystem/local:default'/>
                </dependency>
                <dependency name='autofs'
                    grouping='optional_all'
                    restart_on='error'
                    type='service'>
                    <service_fmri
                        value='svc:/system/filesystem/autofs:default'/>
                </dependency>
                <exec_method
                        type='method'
                        name='start'
                        exec='/lib/svc/method/init.d_roxen start'
                        timeout_seconds='60' />
                <exec_method
                        type='method'
                        name='stop'
                        exec='/lib/svc/method/init.d_roxen stop'
                        timeout_seconds='60' />

                <property_group name='roxen' type='application'>
                        <stability value='Evolving' />
                        <propval name='dir' type='astring'
				value='/usr/local/roxen' />
                        <propval name='confdirs' type='astring'
				value='/etc/roxen' />
                </property_group>

                <property_group name='startd' type='framework'>
                        <!-- sub-process core dumps shouldn't restart session -->
                        <propval name='ignore_error' type='astring' value='core,signal' />
                </property_group>
                <template>
                        <common_name>
                                <loctext xml:lang='C'>
                                        Roxen HTTP server
                                </loctext>
                        </common_name>
                </template>

        </instance>

        <stability value='Evolving' />
</service>
</service_bundle>
